%%==============================================================Custom Theorems=======================================================================%%

\renewcommand{\thesection}{\Roman{section}} 

\theoremstyle{definition}
\newtheorem{defin}{Définition}[section]

\theoremstyle{remark}
\newtheorem*{rmq}{Remarque:}

\theoremstyle{plain}
\newtheorem{theorem}{Théorème}[section]
\newtheorem{cor}{Corollaire}[theorem]
\newtheorem{lemma}[section]{Lemme}
\newtheorem{mtheoreminner}{Théorème}
\newenvironment{mth}[1]{%
  \renewcommand\themtheoreminner{#1}%
  \mtheoreminner
}{\endmtheoreminner}

